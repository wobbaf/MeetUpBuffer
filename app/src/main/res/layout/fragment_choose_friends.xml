<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.magda.meetupbuffer.fragments.ChooseFriendsFragment"
android:background="@android:color/holo_blue_light"
android:orientation="horizontal">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Who would You like to meet with?"
    android:id="@+id/textView4"
    android:textColor="#ffffff"
    android:shadowColor="@android:color/holo_blue_dark"
    android:textSize="40dp"
    android:textStyle="bold"
    android:gravity="center_horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <com.etsy.android.grid.StaggeredGridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friends_list"
        android:layout_width="240dp"
        android:listSelector="@android:color/holo_blue_dark"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonFragmentPlaces"
        app:item_margin="8dp"
        app:column_count="2" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Next"
    android:id="@+id/buttonFragmentPlaces"
    android:textColor="@android:color/holo_blue_light"
    android:background="#ffffff"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="5dp" />
</RelativeLayout>
